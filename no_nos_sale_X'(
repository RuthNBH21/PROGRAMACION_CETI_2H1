#include <stdio.h>

void main(){
  int rep, empi, ter, incre;
  char cont;

 printf ("elige una opcion: 1-mostrar una serie, 2-saber cuanto vas a pagar en una multa con el descuento, 3-salir");
  scanf("%i", &rep);

 while (rep<3){
   switch (rep){
      case 1:
      printf ("en que numero quieres que empieze la serie");
      scanf ("%i", &empi);
      printf ("en que numero quieres que termine la serie");
      scanf ("%i", &ter);
      printf ("cuanto quieres que aumente");
      scanf ("%i", &incre);
      if (incre/ter==0){
       if (empi>ter){
          for (cont=empi; cont<=ter; cont-=incre){
               for (cont=empi; cont<=ter; cont+=incre){
                 printf ("%i\n", cont );
                    printf("Los valores no coinciden");
                   }
                               printf ("%i\n", cont );
             }     
          } else{
             printf("valores fuera del rango");
             }
          
       }       
     case 2:
     printf("cuanto es la multa");
   
     printf ("cuando fue la multa");
   
     printf ("cual es la fecha a pagar");
   


     case 3: 
     printf ("adios");


     break;
     }
   }
 }
