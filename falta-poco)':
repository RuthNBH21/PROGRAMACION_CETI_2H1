         scanf("%i",&mesp);
         printf("Año:");
         scanf("%i",&anop);
         printf("Precio de la multa:");
         scanf("%i", &multa);

         switch (mesm){
           case 1: mesmm=31;
             break;
           case 2: mesmm=59;
             break;
           case 3: mesmm=90;
             break;
           case 4: mesmm=120;
