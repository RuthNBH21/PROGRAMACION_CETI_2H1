            printf("%i\n", mesmm);
         switch (mesm){
           case 1: diam=31-diam;
             break;
           case 2: diam=29-diam;
             break;
           case 3: diam=31-diam;
             break;
           case 4: diam=30-diam;
             break;
           case 5: diam=31-diam;
             break;
           case 6: diam=30-diam;
             break;
           case 7: diam=31-diam;
             break;
           case 8: diam=31-diam;
             break;
           case 9: diam=30-diam;
             break;
           case 10: diam=31-diam;
             break;
           case 11: diam=30-diam;
             break;
           case 12: diam=31-diam;
             break;
